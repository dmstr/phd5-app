{
    "name": "dmstr/phd5-app",
    "minimum-stability": "RC",
    "require": {
        "wikimedia/composer-merge-plugin": "~1.4",
        "scrivo/highlight.php": "9.15.6.1 as 8.999",
        "pheme/yii2-settings": "0.7 as 0.5",
        "dmstr/yii2-widgets2-module": "2.0.0-rc2 as 2.0.0"
    },
    "extra": {
        "merge-plugin": {
            "ignore-duplicates": true,
            "require": [
                "composer.phd5.json"
            ]
        }
    },
    "config": {
        "preferred-install": {
            "dmstr/*": "source",
            "hrzg/*": "source",
            "schmunk42/*": "source",
            "dektrium/yii2-rbac": "source",
            "*": "auto"
        },
        "fxp-asset": {
            "installer-paths": {
                "npm-asset-library": "vendor/npm",
                "bower-asset-library": "vendor/bower"
            },
            "vcs-driver-options": {
                "github-no-api": true
            },
            "git-skip-update": "2 days",
            "pattern-skip-version": "(-build|-patch)",
            "optimize-with-installed-packages": false
        }
    }
}
